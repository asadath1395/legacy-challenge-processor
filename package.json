  "dependencies": {
    "async-mutex": "^0.1.3",
    "@hapi/joi": "^15.0.2",
    "bluebird": "^3.5.4",
    "config": "^3.1.0",
    "get-parameter-names": "^0.3.0",
    "http-json-response": "^1.0.1",
    "lodash": "^4.17.11",
    "no-kafka": "^3.4.3",
    "showdown": "^1.9.0",
    "superagent": "^5.0.5",
    "tc-core-library-js": "appirio-tech/tc-core-library-js.git#v2.6.1",
    "topcoder-healthcheck-dropin": "^1.0.3",
    "winston": "^3.2.1",
    "q": "^1.5.1",
    "ifxnjs": "^8.0.1"
  },
  "engines": {
    "node": "8.x"
  },
  "standard": {
